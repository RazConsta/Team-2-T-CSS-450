<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.contacts.AddFriendsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_search_people"
        android:name="edu.uw.tcss450.uiandnavigationlab.ui.blog.BlogFragment"
        android:layout_width="413dp"
        android:layout_height="341dp"
        android:orientation="vertical"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_search_people"
        tools:context="edu.uw.tcss450.uiandnavigationlab.ui.blog.BlogListFragment"
        tools:listitem="@layout/fragment_contact_card" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_received_requests"
        android:name="edu.uw.tcss450.uiandnavigationlab.ui.blog.BlogFragment"
        android:layout_width="407dp"
        android:layout_height="230dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_request_received"
        tools:context="edu.uw.tcss450.uiandnavigationlab.ui.blog.BlogListFragment"
        tools:listitem="@layout/fragment_contact_card" />

    <TextView
        android:id="@+id/text_request_received"
        android:layout_width="375dp"
        android:layout_height="46dp"
        android:layout_marginTop="15dp"
        android:text="Requests Received"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_search_people"
        android:layout_width="375dp"
        android:layout_height="46dp"
        android:text="Search People"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.305"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_received_requests" />

    <EditText
        android:id="@+id/edit_search_people"
        android:layout_width="269dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:autofillHints=""
        android:ems="10"

        android:hint="Nickname"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_search_people" />

    <Button
        android:id="@+id/button_search_people"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:text="Search"
        app:layout_constraintBottom_toTopOf="@+id/list_search_people"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toEndOf="@+id/edit_search_people"
        app:layout_constraintTop_toBottomOf="@+id/text_search_people"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>