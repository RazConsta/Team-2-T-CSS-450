<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_current_password"
        android:hint="@string/current_password"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="wrap_content">
    </EditText>

    <EditText
        android:id="@+id/edit_new_password"
        android:hint="@string/new_password"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_below="@id/edit_current_password"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content">
    </EditText>

    <EditText
        android:id="@+id/edit_retype_password"
        android:hint="@string/retype_password"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_below="@id/edit_new_password"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content">
    </EditText>

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/password_req_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_retype_password"
        android:layout_marginTop="0dp"
        android:text="@string/pw_req"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.412" />

</RelativeLayout>