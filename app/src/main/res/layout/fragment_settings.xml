            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/color_theme"></TextView>

        <RadioButton
            android:id="@+id/alternate_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/gray_text_color"
            android:checked="false"
            android:onClick="checkButton"
            android:text="@string/defaultTheme"
            android:textColor="#8a000000" />

        <RadioButton
            android:id="@+id/default_theme_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/gray_text_color"
            android:onClick="checkButton"
            android:text="@string/alternateTheme"
            android:textColor="#8a000000" />
    </RadioGroup>

