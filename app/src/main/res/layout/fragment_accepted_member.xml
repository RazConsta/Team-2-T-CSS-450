<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accepted_member_card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contact_card_layout_inner"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_contact"
            android:layout_width="81dp"
            android:layout_height="99dp"
            android:src="@mipmap/ic_profile_foreground"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/contact_card_nickname"
            android:layout_width="174dp"
            android:layout_height="45dp"
            android:text="@string/title_contact_name"
            android:textColor="#212121"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/image_contact"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.114"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/contact_card_fullname"
            android:layout_width="179dp"
            android:layout_height="47dp"
            android:layout_marginTop="4dp"
            android:text="@string/title_full_name"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/image_contact"
            app:layout_constraintTop_toBottomOf="@+id/contact_card_nickname"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
